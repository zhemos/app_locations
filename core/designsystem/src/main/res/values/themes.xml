<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.App.TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/ic_background</item>
        <item name="android:gravity">center|top</item>
        <item name="android:fontFamily">@font/oswald_light</item>
        <item name="android:textColor">@color/black2</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Theme.App.SubTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="Theme.App.EditText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Theme.App.ButtonText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">29sp</item>
    </style>
</resources>